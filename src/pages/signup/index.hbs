<div class="flex flex-col centered form">
  <span>Sign up</span>
  <form>
    <div class="input-container">
      <input type="text" id="first_name" name="first_name" required pattern="^[A-Z]{1}[a-z-]+$" />
      <label for="first_name">First name</label>
    </div>
    <div class="input-container">
      <input type="text" id="second_name" name="second_name" required pattern="^[A-Z]{1}[a-z-]+$" />
      <label for="second_name">Second name</label>
    </div>
    <div class="input-container">
      <input
        type="text"
        id="login"
        name="login"
        required
        pattern="^(?=[a-zA-Z0-9_-]{3,20}$)(?!.*[_-]{2})[^_-].*[^_-]$"
      />
      <label for="login">Login</label>
    </div>
    <div class="input-container">
      <input type="email" id="email" name="email" required />
      <label for="email">Email</label>
    </div>
    <div class="input-container">
      <input
        type="password"
        id="password"
        name="password"
        required
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[a-zA-Z0-9]{8,40}$"
      />
      <label for="password">Password</label>
    </div>
    <div class="input-container">
      <input
        type="text"
        id="phone"
        name="phone"
        required
        pattern="^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,9}$"
      />
      <label for="phone">Phone</label>
    </div>
    <button class="button button-primary" type="submit">Sign up</button>
  </form>
</div>
